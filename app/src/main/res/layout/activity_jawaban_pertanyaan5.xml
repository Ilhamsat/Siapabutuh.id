<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JawabanPertanyaan5"
    android:background="@drawable/pop_bg">

    <Button
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_action_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/jawabanPertanyaan5"
        android:layout_below="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dapatkah saya menjadi Relawan Siapabutuh.id ?"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#78D613"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siapapun dapat menjadi Relawan Siapabutuh.id. Nanti akan ada fitur untuk daftar Relawan Siapabutuh.id. Tetapi untuk sekarang karena belum ada fitur pendaftaran Relawan, maka sementara silahkan menghubungi kontak yang ada, yaitu :"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/jawabanPertanyaan5"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +6285692315002 (Yogyakarta)"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/li2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +6281347591227 (Kalimantan Tengah)"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/li1"/>

</RelativeLayout>