<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JawabanPertanyaan3"
    android:background="@drawable/pop_bg">

    <Button
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_action_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/jawabanPertanyaan3"
        android:layout_below="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimana lokasi kantor Siapabutuh.id ?"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#78D613"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untuk lokasi kantor ada di 2 lokasi yaitu :"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/jawabanPertanyaan3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/lis1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Jalan Rambutan No. 56B Kutu Dukuh Mlati, Sleman, Yogyakarta"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/lis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Jalan Bhayangkara RT12 Gg. Pongo3 Pangkalan Bun, Kalimantan Tengah"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/lis1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Namun untuk kantor pusat ada di Yogyakarta"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/lis2"
        android:layout_marginTop="20dp"/>

</RelativeLayout>